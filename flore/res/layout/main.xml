<!-- Layout for SearchableActivity. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<fr.flore_de_poche.ui.components.ApplicationAutoCompleteTextView android:layout_width="fill_parent"
        android:inputType="textNoSuggestions"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:id="@+id/home_search_field" android:hint="@string/search_hint" android:drawableRight="@drawable/ic_cancel" />
	<ListView android:id="@+id/android:list" android:layout_width="fill_parent"
		android:layout_height="0dp" android:layout_weight="1" />
</LinearLayout>


