<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/fr.flore"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5sp" >

    <LinearLayout
        android:id="@+id/search_show_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_border"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/search_nb_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5sp"
            android:paddingLeft="5sp"
            android:paddingRight="30sp"
            android:paddingTop="5sp"
            android:text="@string/search_results" />

        <ImageView
            android:id="@+id/reset_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/reset_form"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbar_search_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="4.0"
        android:paddingTop="30sp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_colour_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_colour_choose"
                custom:text="@string/search_colour" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_nb_petale_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_nb_petale_choose"
                custom:text="@string/search_nb_petale" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_particularite_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_particularite_choose"
                custom:text="@string/search_particularite" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_aspect_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_aspect_choose"
                custom:text="@string/search_aspect" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_leaf_type_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_leaf_type_choose"
                custom:text="@string/search_leaf_type" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_leaf_disposition_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_leaf_disposition_choose"
                custom:text="@string/search_leaf_disposition" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_pilosite_tige_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_pilosite_tige_choose"
                custom:text="@string/search_pilosite_tige" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_pilosite_feuille_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_pilosite_feuille_choose"
                custom:text="@string/search_pilosite_feuille" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_inflorescence_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_inflorescence_choose"
                custom:text="@string/search_inflorescence" />

            <fr.flore_de_poche.ui.multicriteriasearch.MultiCriteriaSelectField
                android:id="@+id/search_scientific_family_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingLeft="10sp"
                custom:spinnerPrompt="@string/search_scientific_family_choose"
                custom:text="@string/search_scientific_family" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>